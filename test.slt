(text (name h) (contents (justify right 
							"QWERTYUIOP"
							(font "fonts/VeraBd.ttf" 8 "ASDFGH, eh sorta ") 
							(font-size 18 "YO" (color #FF33FF (font-size 36 "O")) (color #555555 "O") "O") " ...sup")) 
               (font-size 16)
               (width (/ (width page) 2)) 
               (height 30) 
               (y (- (height page) (margin-top page))))
                
(text (name h2) (contents "Another header: '!@#'.") 
                (font-size 16) 
                (width (/ (width page) 3)) 
                (height 30) 
                (y (- (height page) (margin-top page))))

(image (name b1) (src "img/top_1.bmp"))
(image (name b2) (src "img/top_2.bmp"))
(image (name b3) (src "img/top_3.bmp"))

(align-x (ref page) (item h)  (align centre))
(align-x (ref page) (item h2) (align centre))
(align-x (ref page) (item r1) (align centre))

(rect (name rec) (y (/ (height page) 2)) (width (+ 0 (/ (width page) 8))) (height 50))

(text (name rec-tex) (contents (justify centre "LDUF the only way out is forward I think therefore I am you know?")) (x (x rec)) (y (y rec)) (width (width rec)) (height (height rec)))

(align-x (ref page) (item rec))



(row (name r1)
     (padding 10)
     (spacing 20)
     (elements b1 b2 b3) 
     (height (* 2 (height h)))
     (width (- (width page) (/ (* 3 (x h)) 2))))
     
(beneath (top h) (bottom r1) (spacing 20))

(beneath (top r1) (bottom h2) (spacing 20))
